# Homebrew settings
export PATH="/opt/homebrew/bin:/opt/homebrew/sbin${PATH+:$PATH}";
export MANPATH="/opt/homebrew/share/man${MANPATH+:$MANPATH}:";
export INFOPATH="/opt/homebrew/share/info:${INFOPATH:-}";
#export HOMEBREW_NO_AUTO_UPDATE=1

# Use homebrew LLVM
LLVM_PATH=$(brew --prefix llvm)
export PATH="$LLVM_PATH/bin:$PATH"
export LIBCLANG_PATH="$LLVM_PATH/lib"
export LDFLAGS="-L$LLVM_PATH/lib"
export CPPFLAGS="-I$LLVM_PATH/include"
#export DYLD_LIBRARY_PATH="$LLVM_PATH/lib"
# fallback path is searched at last, which is safer
# which is also the cargo book recommends
export DYLD_FALLBACK_LIBRARY_PATH="$LLVM_PATH/lib"

# Added by OrbStack: command-line tools and integration
source ~/.orbstack/shell/init.zsh 2>/dev/null || :

VI_MODE_SET_CURSOR=true
#alias vim="nvim"
#export VIMCONFIG=~/.config/nvim
#export VIMDATA=~/.local/share/nvim
export EDITOR=vim

# Haskell settings
[ -f "$HOME/.ghcup/env" ] && source "$HOME/.ghcup/env" # ghcup-env

# Rust settings
. "$HOME/.cargo/env" # cargo-env

# NodeJs settings
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# bun
export BUN_INSTALL="$HOME/.bun"

# bun completions
[ -s "/Users/indirection42/.bun/_bun" ] && source "/Users/indirection42/.bun/_bun"

export PATH="$BUN_INSTALL/bin:$PATH"

# Python managed by uv
. "$HOME/.local/bin/env"
# Solana cli
export PATH="$HOME/.local/share/solana/install/active_release/bin:$PATH"

export PATH="$PATH:/Users/indirection42/.foundry/bin"
