# This is Git's per-user configuration file.
# Global settings that apply everywhere
[push]
    autoSetupRemote = true
[submodule]
    recurse = true

# Conditional includes based on directory structure
# Personal projects (assumes they're in ~/personal/ or ~/dev/personal/)
[includeIf "gitdir:~/personal/"]
    path = ~/.gitconfig-personal
[includeIf "gitdir:~/dev/personal/"]
    path = ~/.gitconfig-personal

# Professional projects (assumes they're in ~/work/ or ~/dev/work/)
[includeIf "gitdir:~/work/"]
    path = ~/.gitconfig-work
[includeIf "gitdir:~/dev/work/"]
    path = ~/.gitconfig-work

# Default configuration (fallback)
[user]
    name = Jiyuan Zheng
    email = indirection42@outlook.com
